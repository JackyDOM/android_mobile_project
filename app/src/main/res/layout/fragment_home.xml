<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".HomeFragment">

        <!-- Wrap include and ScrollView in LinearLayout with vertical orientation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Include your toolbar layout -->
            <include
                android:id="@+id/includeToolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Display the GenderBook -->
            <LinearLayout
                android:id="@+id/linearGenderBook"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GenderBook"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <Space
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnGenderalBook"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="See All"
                    android:backgroundTint="@color/white"
                    android:textColor="#164387"
                    android:textSize="20sp"/>

            </LinearLayout>
            <!-- ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="14dp">

                <!-- Your ScrollView content goes here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <!-- Add your content views here -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:background="#c3c7c7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGeneralBook"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/android" />

                        <TextView
                            android:id="@+id/txtGeneralBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="15dp"
                        android:background="#c3c7c7"
                        android:gravity="center"
                        android:orientation="vertical">

