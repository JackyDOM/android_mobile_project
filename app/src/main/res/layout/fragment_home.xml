<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".HomeFragment"
        android:id="@+id/fragmentHome">

        <!-- Wrap include and ScrollView in LinearLayout with vertical orientation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Include your toolbar layout -->
            <include
                android:id="@+id/includeToolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Display the GenderBook -->
            <LinearLayout
                android:id="@+id/linearGenderBook"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_50dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp">

                <TextView
                    android:layout_marginLeft="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genderbook"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sp"/>

                <Space
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnGenderalBook"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:text="@string/see_all"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/_164387"
                    android:textSize="@dimen/_20dp"/>

            </LinearLayout>
            <!-- ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200dp"
                android:layout_marginTop="@dimen/_14dp">

                <!-- Your ScrollView content goes here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_15dp">

                    <!-- Add your content views here -->
                    <LinearLayout
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_150dp"
                        android:background="@color/c3c7c7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGeneralBook"
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_100dp"
                            android:src="@drawable/android" />

                        <TextView
                            android:id="@+id/txtGeneralBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hello" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_150dp"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:background="@color/c3c7c7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_100dp"
                            android:src="@drawable/android" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hello" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_150dp"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:background="@color/c3c7c7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_100dp"
                            android:src="@drawable/android" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hello" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Display the comdyBook -->
            <LinearLayout
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_80dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp">

                <TextView
                    android:layout_marginLeft="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ComdyBook"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sp"/>

                <Space
                    android:layout_width="@dimen/_120dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnComdyBook"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:text="@string/see_all"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/_164387"
                    android:textSize="@dimen/_20sp"/>

            </LinearLayout>
            <!-- ScrollView -->
